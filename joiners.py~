import re
import sys
import os
from datetime import datetime
from collections import defaultdict
import pyconll

PARTICLE_NODE = r"\((P|RPX?|Q-.|ADVR?|PRO-.|ONE\+Q-.|OTHER-.|WD-.) [A-Za-z]+\$-[A-Za-z]+\)"
PARTICLE_TOKEN = r"(?<= )[A-Za-z]+(?=\$)"

VERB_NODE = r"\((BE|DO|HV|MD|RD|V(A|B))(P|D|N|)(I|S|N|G|)(-(N|A|D|G))? \$[A-Za-z]+-[A-Za-z]+\)"
VERB_START = r"(?<=[A-Z] )\@(?=[A-Za-z])"  # matches '@' in start of verb
VERB_TOKEN = r"(?<=\@)[A-ZA-Z]+(?=-)"
VERB_TAG = r"(?<=\()(BE|DO|HV|MD|RD|V(A|B))(P|D|N|)(I|S|N|G|)(-(N|A|D|G))?"
LEMMA_START_GENERAL = (
    r"((?<=[a-z]-)(?=[a-z]))"  # MATCHES START OF LEMMA
    )
LEMMA_TOKEN_GENERAL = r"(?<=-)[a-z]+(?=\)\))"
LEMMA_END_GENERAL = (
    r"(?<=[A-Za-z])(?=\))"  # matches end of lemma
    )
